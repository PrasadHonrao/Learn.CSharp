<Window x:Class="RSS_Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSS_Downloader"
        mc:Ignorable="d"
        Title="RSS Downloader" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Button x:Name="DownloadRSSButton" Content="Download Channel 9 RSS" FontSize="20" Margin="10" Click="DownloadRSSButton_Click"/>
            <Button x:Name="IncrementCounterButton" Content="Increment Counter" FontSize="20" Margin="10" Click="IncrementCounterButton_Click"/>
            
            <Label x:Name="IncrementOutputLabel" Content="0" Margin="10" FontSize="20"/>
            <TextBox x:Name="RSSTextBox" Height="150" TextWrapping="Wrap" Margin="10"/>
            
        </StackPanel>
    </Grid>
</Window>
